<section class="py-5">
  <header>
    <p class="small text-muted small text-uppercase mb-1">Made the hard way</p>
    <h2 class="h5 text-uppercase mb-4">Top trending products</h2>
  </header>
  <div class="row">
    <!-- PRODUCT-->
    <% @products.each do  | pro |%>
      <div class="col-xl-3 col-lg-4 col-sm-6">
        <div class="product text-center">
          <div class="position-relative mb-3">
            <div class="badge text-white badge-"></div>
            <%=image_tag(url_for(pro.images.first), class: "img-fluid w-100", style: "height: 270px;") %>
            <div class="product-overlay">
              <ul class="mb-0 list-inline btnn" >
                <li class="list-inline-item m-0 p-0">
                    <%= link_to new_favourite_path, class: "btn btn-sm btn-outline-dark ", method: "post", remote: true do %>
                    <i class="far fa-heart thissss" ></i>
                    <%end%>
                </li>
                <li class="list-inline-item m-0 p-0">
                  <a class="btn btn-sm btn-dark" href="#">Add to cart</a>
                </li>
                <li class="list-inline-item mr-0">
                  <a class="btn btn-sm btn-outline-dark" href="#productView" data-toggle="modal">
                    <i class="fas fa-expand"></i>
                  </a>
                </li>
              </ul>
            </div>
          </div>
          <h6 class ="d-block">
            <%= link_to products_show_path do %>
            <%= pro.name %>
            <%end%>
          </h6>
          <p class="small text-muted">Rs <%= pro.price%></p>
        </div>
      </div>
    <% end %>
  </div>
</section>

<script type="text/javascript">
  $(document).ready(function(){
        $(".btn-outline-dark").click(function(event){
      event.preventDefault();
    });
  });
    $(".btnn").click(function(){
      $(this).find(".thissss").toggleClass("redclass");

  });
</script>
